rp_feature="sys_nerr"
rp_feature_name="RP_SYS_NERR"
rp_feature_run=value
rp_feature_incs='#include <errno.h>
                  #include <stdio.h>'
rp_feature_path=
rp_feature_libs=
rp_feature_test='printf("%d", sys_nerr);'
. auto/feature


if [ $rp_found = no ]; then

    # Cygiwn defines _sys_nerr
    rp_feature="_sys_nerr"
    rp_feature_name="RP_SYS_NERR"
    rp_feature_run=value
    rp_feature_incs='#include <errno.h>
                      #include <stdio.h>'
    rp_feature_path=
    rp_feature_libs=
    rp_feature_test='printf("%d", _sys_nerr);'
    . auto/feature
fi


if [ $rp_found = no ]; then

    # Solaris has no sys_nerr
    rp_feature='maximum errno'
    rp_feature_name=RP_SYS_NERR
    rp_feature_run=value
    rp_feature_incs='#include <errno.h>
                      #include <string.h>
                      #include <stdio.h>'
    rp_feature_path=
    rp_feature_libs=
    rp_feature_test='int  n;
                      char *p;
                      for (n = 1; n < 1000; n++) {
                          errno = 0;
                          p = strerror(n);
                          if (errno == EINVAL
                              || p == NULL
                              || strncmp(p, "Unknown error", 13) == 0)
                          {
                              break;
                          }
                      }
                      printf("%d", n);'
    . auto/feature
fi


