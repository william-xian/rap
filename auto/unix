rp_feature="mmap(MAP_ANON|MAP_SHARED)"
rp_feature_name="RP_HAVE_MAP_ANON"
rp_feature_run=yes
rp_feature_incs="#include <sys/mman.h>"
rp_feature_path=
rp_feature_libs=
