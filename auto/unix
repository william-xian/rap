RP_USER=${RP_USER:-nobody}

if [ -z "$RP_GROUP" ]; then
    if [ $RP_USER = nobody ]; then
        if grep nobody /etc/group 2>&1 >/dev/null; then
            echo "checking for nobody group ... found"
            RP_GROUP=nobody
        else
            echo "checking for nobody group ... not found"

            if grep nogroup /etc/group 2>&1 >/dev/null; then
                echo "checking for nogroup group ... found"
                RP_GROUP=nogroup
            else
                echo "checking for nogroup group ... not found"
                RP_GROUP=nobody
            fi
        fi
    else
        RP_GROUP=$RP_USER
    fi
fi


rp_feature="poll()"
rp_feature_name=
rp_feature_run=no
rp_feature_incs="#include <poll.h>"
rp_feature_path=
rp_feature_libs=
rp_feature_test="int  n; struct pollfd  pl;
                  pl.fd = 0;
                  pl.events = 0;
                  pl.revents = 0;
                  n = poll(&pl, 1, 0);
                  if (n == -1) return 1"
. auto/feature

if [ $rp_found = no ]; then
    EVENT_POLL=NONE
fi


rp_feature="/dev/poll"
rp_feature_name="RP_HAVE_DEVPOLL"
rp_feature_run=no
rp_feature_incs="#include <sys/devpoll.h>"
rp_feature_path=
rp_feature_libs=
rp_feature_test="int  n, dp; struct dvpoll  dvp;
                  dp = 0;
                  dvp.dp_fds = NULL;
                  dvp.dp_nfds = 0;
                  dvp.dp_timeout = 0;
                  n = ioctl(dp, DP_POLL, &dvp);
                  if (n == -1) return 1"
. auto/feature

if [ $rp_found = yes ]; then
    CORE_SRCS="$CORE_SRCS $DEVPOLL_SRCS"
    EVENT_MODULES="$EVENT_MODULES $DEVPOLL_MODULE"
    EVENT_FOUND=YES
fi


if test -z "$RP_KQUEUE_CHECKED"; then
    rp_feature="kqueue"
    rp_feature_name="RP_HAVE_KQUEUE"
    rp_feature_run=no
    rp_feature_incs="#include <sys/event.h>"
    rp_feature_path=
    rp_feature_libs=
    rp_feature_test="(void) kqueue()"
    . auto/feature

    if [ $rp_found = yes ]; then

        have=RP_HAVE_CLEAR_EVENT . auto/have
        EVENT_MODULES="$EVENT_MODULES $KQUEUE_MODULE"
        CORE_SRCS="$CORE_SRCS $KQUEUE_SRCS"
        EVENT_FOUND=YES

        rp_feature="kqueue's NOTE_LOWAT"
        rp_feature_name="RP_HAVE_LOWAT_EVENT"
        rp_feature_run=no
        rp_feature_incs="#include <sys/event.h>"
        rp_feature_path=
        rp_feature_libs=
        rp_feature_test="struct kevent  kev;
                          kev.fflags = NOTE_LOWAT;
                          (void) kev"
        . auto/feature


        rp_feature="kqueue's EVFILT_TIMER"
        rp_feature_name="RP_HAVE_TIMER_EVENT"
        rp_feature_run=yes
        rp_feature_incs="#include <sys/event.h>
                          #include <sys/time.h>"
        rp_feature_path=
        rp_feature_libs=
        rp_feature_test="int      kq;
                  struct kevent    kev;
                  struct timespec  ts;

                  if ((kq = kqueue()) == -1) return 1;

                  kev.ident = 0;
                  kev.filter = EVFILT_TIMER;
                  kev.flags = EV_ADD|EV_ENABLE;
                  kev.fflags = 0;
                  kev.data = 1000;
                  kev.udata = 0;

                  ts.tv_sec = 0;
                  ts.tv_nsec = 0;

                  if (kevent(kq, &kev, 1, &kev, 1, &ts) == -1) return 1;

                  if (kev.flags & EV_ERROR) return 1;"

        . auto/feature
    fi
fi


if [ "$RP_SYSTEM" = "NetBSD" ]; then

    # NetBSD 2.0 incompatibly defines kevent.udata as "intptr_t"

    cat << END >> $RP_AUTO_CONFIG_H

#define RP_KQUEUE_UDATA_T

END

else
    cat << END >> $RP_AUTO_CONFIG_H

#define RP_KQUEUE_UDATA_T  (void *)

END

fi


