if [ $rp_found = no ]; then

    # Linux before glibc 2.17, notably CentOS 6

    rp_feature="clock_gettime(CLOCK_MONOTONIC) in librt"
    rp_feature_libs="-lrt"
    . auto/feature

    if [ $rp_found = yes ]; then
        CORE_LIBS="$CORE_LIBS -lrt"
    fi
fi


